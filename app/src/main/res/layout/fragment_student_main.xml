<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_library"
    android:layout_height="match_parent"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProfile"
        android:layout_width="match_parent"
        android:backgroundTint="#5EF8F4F4"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/popins_bold"
                android:textColor="@color/brown"
                android:textSize="24sp"
                android:text="Добро пожаловать!" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#5EF8F4F4"
        app:layout_constraintTop_toBottomOf="@id/cardProfile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBrowseBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#55574116"
                android:fontFamily="@font/popins_bold"
                android:padding="12dp"
                android:text="Просмотр книг"
                app:icon="@drawable/ic_book" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#55574116"
                android:fontFamily="@font/popins_bold"
                android:padding="12dp"
                android:text="Мои книги"
                app:icon="@drawable/ic_library" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/popins_bold"
                android:padding="12dp"
                android:backgroundTint="#52574116"
                android:text="Мой профиль"
                app:icon="@drawable/ic_person" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Выйти"
        android:textColor="@color/brown"
        android:backgroundTint="#00FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/popins_bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>